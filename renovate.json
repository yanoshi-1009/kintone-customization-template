{
  "timezone": "Asia/Tokyo",
  "schedule": "before 2am",
  "labels": ["renovate"],
  "packageRules": [
    {
      "managers": ["npm"],
      "depTypeList": ["devDependencies", "dependencies"],
      "extends": [
        "config:base",
        ":pinAllExceptPeerDependencies",
        ":maintainLockFilesWeekly",
        ":automergeMinor"
      ],
      "lockFileMaintenance": {"automerge": true}
    }
  ]
}
