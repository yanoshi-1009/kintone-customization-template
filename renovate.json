{
  "extends": [
    "config:base",
    ":pinAllExceptPeerDependencies",
    ":automergeMinor",
    ":maintainLockFilesWeekly",
    ":skipStatusChecks"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": "before 2am",
  "labels": ["renovate"],
  "assigneesFromCodeOwners": true,
  "lockFileMaintenance": {
    "automerge": true
  },
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchPackagePatterns": ["@cybozu/eslint-config"],
      "automerge": true
    }
  ]
}
